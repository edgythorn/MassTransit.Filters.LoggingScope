<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Description>MassTransit middleware that allows to pass a logging scope from a producer to a consumer through the message headers
</Description>
    <PackageTags>MassTransit Logging LoggingScope</PackageTags>
    <PackageProjectUrl>https://github.com/edgythorn/MassTransit.Filters.LoggingScope</PackageProjectUrl>
    <RepositoryUrl>https://github.com/edgythorn/MassTransit.Filters.LoggingScope</RepositoryUrl>
    <Authors>edgythorn</Authors>
    <Company>edgythorn</Company>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MassTransit" Version="6.2.5" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="3.1.3" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="3.1.3" />
  </ItemGroup>

</Project>
